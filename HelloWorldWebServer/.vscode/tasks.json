{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build: debug",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "helloworldwebserver:dev",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/HelloWorldWebServer.csproj"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: release",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "helloworldwebserver:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"platform": {
					"os": "linux",
					"architecture": "amd64"
				},
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/HelloWorldWebServer.csproj"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build: debug"
			],
			      "dockerRun": {
					"image": "helloworldwebserver:dev",
					"name": "helloworldwebserver-dev",
					"ports": [ "32770:5240" ],
					"env": { "ASPNETCORE_URLS": "http://0.0.0.0:5240" }
      		},
			"netCore": {
				"appProject": "${workspaceFolder}/HelloWorldWebServer.csproj",
				"enableDebugging": true
			}
		},
		    {
			"type": "docker-run",
			"label": "docker-run: dev-logs",
			"dependsOn": [ "docker-build: debug" ],
			"dockerRun": {
				"image": "helloworldwebserver:dev",
				"name": "helloworldwebserver-dev-logs",
				"ports": [ "32770:5240" ],
				"env": { "ASPNETCORE_URLS": "http://0.0.0.0:5240" }
				// No enableDebugging here; let ENTRYPOINT run as PID 1
			},
			"netCore": {
				"appProject": "${workspaceFolder}/HelloWorldWebServer.csproj",
				"enableDebugging": false
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build: release"
			],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/HelloWorldWebServer.csproj"
			}
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/HelloWorldWebServer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/HelloWorldWebServer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/HelloWorldWebServer.sln"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}